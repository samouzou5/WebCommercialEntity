@model  WebCommercialEntity.Models.articles

@{
    ViewBag.Title = "Modifier";
    Layout = "~/Views/Shared/_LayoutCommercial.cshtml";
}

<h2>Modifier un article</h2>

@if (Model != null && Session["login"] != null)
{

    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Article</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.NO_ARTICLE, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NO_ARTICLE, new { htmlAttributes = new { @class = "form-control", @disabled = "" } })
                    @Html.ValidationMessageFor(model => model.NO_ARTICLE, "", new { @class = "text-danger" })
                    <input name="NO_ARTICLE" type="HIDDEN" value=@(@Model.NO_ARTICLE) id="NoArticle" />

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Libellé article</label>
                <div class="col-md-10">
                    <input name="LIB_ARTICLE" type="text" class="form-control" value=@(@Model.LIB_ARTICLE) id="LIB_ARTICLE" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Quantité</label>
                <div class="col-md-10">
                    <input name="QTE_DISPO" type="number" class="form-control" value=@(@Model.QTE_DISPO) id="QTE_DISPO" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Ville Article</label>
                <div class="col-md-10">
                    <input name="VILLE_ART" type="text" class="form-control" value=@(@Model.VILLE_ART) id="VILLE_ART" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Prix</label>
                <div class="col-md-10">
                    <input name="PRIX_ART" type="text" class="form-control" value=@(@Model.PRIX_ART.ToString("0.00")) id="ADRESSE_CL" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Interrompu</label>
                <div class="col-md-10">
                    @if (Model.INTERROMPU.Equals("F"))
                    {
                    <label class="radio-inline"><input type="radio" name="INTERROMPU" value="F" checked>Oui</label>
                    <label class="radio-inline"><input type="radio" name="INTERROMPU" value="T">Non</label>
                    }else{
                    <label class="radio-inline"><input type="radio" name="INTERROMPU" value="F" >Oui</label>
                    <label class="radio-inline"><input type="radio" name="INTERROMPU" value="T" checked>Non</label>
                    }
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Enregistrer" class="btn btn-primary" />

                </div>
            </div>
        </div>

    }
}
else
{
    @Html.Partial("_AccesInterdit");
}


